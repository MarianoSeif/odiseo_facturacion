{% extends 'base.html.twig' %}

{% block body %}
    <h2>Edit Invoice</h2>

    <div class="content">
        <div class="col-xs-12">
            {{ form_start(invoiceForm, {'attr': {'novalidate': 'novalidate'}}) }}
            {{ form_row(invoiceForm.formdate, {'value':  invoicedAt  }) }}
            {{ form_row(invoiceForm.number) }}
            {{ form_row(invoiceForm.details) }}
            {{ form_row(invoiceForm.received_by) }}
            {{ form_row(invoiceForm.payed_at) }}
            {{ form_row(invoiceForm.movements) }}
            <button class="btn btn-primary btn-lg" type="submit" formmethod="post"><i class="fa fa-save"></i> Save</button>
            {{ form_end(invoiceForm) }}
        </div>
    </div>
{% endblock %}

