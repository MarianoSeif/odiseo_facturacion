{% extends 'base.html.twig' %}

{% block body %}
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <div class="row">
                        <div class="column col-xs-2">
                            <h3 class="box-title">Movements List</h3>
                        </div>
                        <div class="column col-xs-3 -align-right">
                            <a href="{{ path('movements_new') }}" class="btn btn-primary"><i class="fa fa-plus-circle"></i> New movement</a>
                        </div>
                        <div class="column col-xs-7">
                            <span class="pull-right">

                            {{ form_start(form, {'method': 'POST', 'attr': {'class': 'form-inline', 'novalidate': 'novalidate'}}) }}
                                <button type="submit" formmethod="post"> Filtrar </button>
                                {{ form_widget(form.desde) }}
                                {{ form_errors(form.desde) }}
                                {{ form_widget(form.hasta) }}
                                {{ form_errors(form.hasta) }}
                                <i class="fa fa-calendar"></i>
                            {{ form_end(form) }}

                            </span>
                        </div>
                    </div>
                </div>

                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Title</th>
                                <th>Price</th>
                                <th>Price AR$</th>
                                <th>Type</th>
                                <th>Invoices</th>
                                <th colspan="2">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for movement in movements %}
                                <tr>
                                    <td>{{ movement.date|date('Y-m-d') }}</td>
                                    <td>{{ movement.title }}</td>
                                    <td>{{ movement.price }}</td>
                                    <td>{{ movement.priceArs }}</td>
                                    <td>{{ movement.type }}</td>
                                    <td>{% for invoice in movement.invoices %}
                                            {{ invoice.number }},
                                        {% endfor %}
                                    </td>
                                    <td align="center"><a href="{{ path('movements_edit', {id: movement.id}) }}"><i class="fa fa-pencil"></i></a></td>
                                    <td align="center">
                                        <a href="{{ path('movements_remove', {id: movement.id}) }}" onclick="return confirm('are u sure?')"><i class="fa fa-trash"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                        {#<tfoot>
                            <tr>
                                <th>Rendering engine</th>
                                <th>Browser</th>
                                <th>Platform(s)</th>
                                <th>Engine version</th>
                                <th>CSS grade</th>
                            </tr>
                        </tfoot>#}
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
{% endblock %}